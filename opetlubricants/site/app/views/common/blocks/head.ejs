<!DOCTYPE html>
<html lang="<%=data.lang%>" xmlns="http://www.w3.org/1999/xhtml">
<%
const currentObject = objects.find(obj=>(obj.isActive));
const {
    sitemaintitlemainpage,
    sitemaintitle,
    sitemaintitledeimiter,
    seodefaultkeywords,
    seodefaultdescription,
    seodefaultauthor,
    seodefaultcopyright,
    seodefaultaddress
} = data.translations;
const {
    seodefaultimage,
    seodefaulturl,
    seositeaddress
} = data.settings;
const title = !page ? sitemaintitlemainpage : `${sitemaintitle} ${sitemaintitledeimiter} ${content ? content.translations[0].name : currentObject.activeCategory.name}`;
const seoKeywords = content && content.translations[0] ? content.translations[0].seoKeywords : seodefaultkeywords;
const seoDescription = content && content.translations[0] ? content.translations[0].seoDescription : seodefaultdescription;
const seoPicture = content ? `${seositeaddress}${content.picture}` : seodefaultimage;
const seoURL = content && content.translations[0] ? `${seositeaddress}/${page}/${content.id}-${content.translations[0].urlName}.html` : seodefaulturl;
%>
<head>
    <title><%=title%></title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0"/>

    <meta name="Author" content="<%=seodefaultauthor%>">
    <meta name="Copyright" content="<%=seodefaultcopyright%>">
    <meta name="Address" content="<%=seodefaultaddress%>">
    <meta name="Keywords" content="<%=seoKeywords%>">
    <meta name="Description" content="<%=seoDescription%>">
    <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "<%= data.settings.ldschemebusinesstype %>",
            "name": "<%= title %>",
            "image": "<%= seoPicture %>",
            "@id": "<%= seoURL %>",
            "url": "<%= seoURL %>",
            "telephone": "<%= data.settings.settingsphone.replace(/[^0-9]+/g, '') %>",
            "priceRange": "<%= data.settings.ldschemepricerange %>",
	        "paymentAccepted": [ "cash", "credit card" ],
            "address": {
                "@type": "PostalAddress",
                "streetAddress": "<%= data.settings.ldschemestreetaddress %>",
                "addressLocality": "<%= data.settings.ldschemeaddresslocality %>",
                "postalCode": "<%= data.settings.ldschemepostalcode %>",
                "addressCountry": "<%= data.settings.ldschemeaddresscountry %>"
            },
            "geo": {
                "@type": "GeoCoordinates",
                "latitude": "<%= data.settings.ldschemelatitude %>",
                "longitude": "<%= data.settings.ldschemelongitude %>"
            },
            "sameAs": [
                "<%=data.settings.settingssociallinkfb %>",
                "<%=data.settings.settingssociallinkig %>",
                "<%=data.settings.settingssociallinkyt %>",
                "<%=data.settings.settingssociallinkin %>",
                "<%=data.settings.settingssociallinktw %>"
            ]
        }
    </script>

    <meta property="og:type" content="website"/>
    <meta property="og:image" content="<%=seoPicture%>"/>
    <meta property="og:url" content="<%=seoURL%>"/>
    <meta property="og:title" content="<%=title%>"/>
    <meta property="og:description" content="<%=seoDescription%>"/>

    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&amp;subset=latin-ext,latin"
